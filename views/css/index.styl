@import nib
@import bootstrap
@import font-awesome

header
    padding 10px 20px
    background #333
    color #fff
    position absolute
    box-sizing border-box
    top 0
    z-index 1
#map
    background resourceUrl("images/map.jpg")
    position absolute
    box-sizing border-box
    top 0
    width 100%
    height 100%
    left 0
    background-size cover

footer
    padding 20px
    background #333
    position absolute
    bottom 0
    text-align center
    font-size 20px
    box-sizing border-box
    left 0
    width 100%
    color #fff
    z-index 1
